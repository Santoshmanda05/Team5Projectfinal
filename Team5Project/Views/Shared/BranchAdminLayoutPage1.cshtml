<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/styles/MainStyle.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    @if (HttpContext.Current.Session["username"] != null)
    {
        <h1 style="color:mediumvioletred;font-family:Cambria;font-display:block;">Online Vehicle Registration</h1>
        <div class="div1">
            <img src="~/images/branchadmin.jpg" class="img" />
        </div>
        <div class="div2">
            <ul>
                <li>@Html.ActionLink("Home Page", "MainPage", "Login")</li>
                <li>@Html.ActionLink("Approve Customer", "ShowToBA", "Login")</li>
                <li>@Html.ActionLink("Request To Admin", "RequestAdmin", "Login")</li>
                <li>@Html.ActionLink("Check", "BAcheck", "Login")</li>
                <li style="float:right">@Html.ActionLink("Logout", "Login", "Login")</li>
                <!--<li style="float:right"><a class="active" href="#about">About</a></li>-->
            </ul>
        </div>
        <div class="div3">
            @RenderBody()
        </div>
    }
    else
    {
        Response.Redirect("~/Login/Login");
    }
    </body>
</html>
